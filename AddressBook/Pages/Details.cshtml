@page "{personId:guid}"
@model AddressBook.Pages.Details

<h5>Name</h5>
<div>@Model.Person!.FirstName @Model.Person!.LastName</div>
<h6>Phone Numbers</h6>
<ul>
    @foreach (var number in Model.Person!.PhoneNumbers)
    {
        <li><form method="post" asp-page-handler="RemovePhoneNumber"><strong>@number.Type:</strong> @number.Number
            <input type="hidden" name="phoneNumber" value="@number.Number" />
            <button type="submit" class="btn btn-sm btn-danger">Remove</button>
            </form></li>
    }
</ul>
<div>
    <form method="post" asp-page-handler="AddPhoneNumber">
        <div class="mb-2">
            <input type="tel" name="phoneNumber" class="form-control"/>
        </div>
        <div class="mb-2">
        <select name="type" class="form-select">
            <option disabled selected hidden>-- Choose One --</option>
            <option value="Home">Home</option>
            <option value="Work">Work</option>
            <option value="Cell">Cell</option>
            <option value="Other">Other</option>
        </select>
        </div>
        <button type="submit" class="btn btn-primary">Add Phone Number</button>
    </form>
</div>